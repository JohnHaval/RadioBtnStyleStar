<Window x:Class="RadioBtnStyleTry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioBtnStyleTry"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <GroupBox Header="Пусички" FontSize="16">
            <StackPanel>
                <RadioButton Content="Пуська 1" HorizontalAlignment="Left"/>
                <RadioButton Content="Лучшая пуська" HorizontalAlignment="Left"/>
                <RadioButton Content="Получше" HorizontalAlignment="Left"/>
                <RadioButton Content="Сосочка моя" HorizontalAlignment="Left" IsChecked="True"/>
            </StackPanel>
        </GroupBox>
        <DataGrid/>
    </DockPanel>
</Window>
